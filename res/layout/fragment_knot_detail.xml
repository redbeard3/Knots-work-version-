<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayoutOnKnotDetail"
        tools:context="com.red_beard.android.knots.KnotDetailFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Knot name"
            android:id="@+id/knotTextView"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/dim_foreground_material_light"
            android:textSize="@dimen/textSizeknotTextView"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:textSize="@dimen/textSizefavoriteCheckBox"
            android:text="@string/add_to_favorite"
            android:id="@+id/favoriteCheckBox"
            android:layout_gravity="right"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="descriptionKnot"
            android:textSize="@dimen/textSizedescriptionKnotTextView"
            android:id="@+id/descriptionKnotTextView"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>
</ScrollView>